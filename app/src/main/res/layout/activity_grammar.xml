<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrammarActivity"
    android:background="@drawable/p4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="Vyberte správnou možnost na chybějící místo v textu"
                    android:textAlignment="center"
                    android:textColor="#FFEB3B"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="1) How often ____ to the dentist?"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnA1"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="you go"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnA2"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="do you go"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnA3"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="you do go"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnA4"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="you do"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnPopUp"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Nápověda"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnMenu"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Menu"
                    android:textAlignment="center"
                    android:textSize="24dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>