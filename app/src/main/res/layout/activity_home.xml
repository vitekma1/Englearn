<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/p2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="65dp"
                    android:layout_marginBottom="50dp"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnImages"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Obrázky"
                    android:textAlignment="center"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnGrammar1"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/menu_button"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Gramatika"
                    android:textAlignment="center"
                    android:textSize="24dp"

                    android:layout_marginBottom="7dp"/>

                <Button
                    android:id="@+id/btnListening"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Poslech"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnRecognition"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Mluvení"
                    android:textAlignment="center"

                    android:textSize="24dp" />
                <Button
                    android:id="@+id/btnReading"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Čtení"
                    android:textAlignment="center"

                    android:textSize="24dp" />
                <Button
                    android:id="@+id/btnLearning"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Výuka"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnScore"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Skóre"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnTranslator"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Překladač"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnProfile"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Profil"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btnSettings"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/menu_button"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Nastavení"
                    android:textAlignment="center"

                    android:textSize="24dp" />

                <Button
                    android:id="@+id/logout"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/menu_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="12dp"
                    android:text="Odhlásit se"
                    android:textAlignment="center"
                    android:textSize="24dp"

                    android:layout_marginBottom="7dp"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>